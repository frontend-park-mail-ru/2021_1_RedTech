div(class="video-player js-video-player")
    video(class="video-player__video js-video" src="")
    div(class="video-player__black-background-view")
    div.spinner
    button(class="video-player__close-button js-close-video")
        img(class="video-player__close-icon" src="../../assets/VideoPlayerAssets/CloseButton.webp" alt="")
    div.video-player__panel
        div(class="video-player__lines js-line")
            div(class="video-player__hint js-hint")
            div(class="video-player__line video-player__line-current")
            div(class="video-player__line video-player__line-full")
        div.video-player__panel-block
            button(class="video-player__panel-button js-toggle-video")
                img(class="panel-button js-play-button" src="../../assets/VideoPlayerAssets/ButtonPlay.webp" alt="")
            button(class="video-player__panel-button video-player__panel-button-volume js-volume-control")
                img(class="video-player__volume-icon js-volume-image" src="../../assets/VideoPlayerAssets/VolumeFull.webp" alt="")
                input(class="video-player__volume js-volume" type="range")
            div(class="film-switcher-js")
                button(class="video-player__panel-button js-move-left")
                    img(class="video-player__move-left-icon" src="../../assets/VideoPlayerAssets/MoveLeft.webp")
                button(class="video-player__panel-button js-move-right")
                    img(class="video-player__move-right-icon" src="../../assets/VideoPlayerAssets/MoveRight.webp" alt="")
            span(class="video-player__panel-button js-duration")
        div(class="video-player__title-container")
            div(class="title__item js-title")
            div(class="title__item js-series-info")
        div(class="video-player__panel-button js-fullscreen")
            img(class="video-player__fullscreen-img js-fullscreen-img" src="../../assets/VideoPlayerAssets/MakeFullScreen.webp" alt="")

    div(class="serial-switcher-js")
        div(class="switch_series switch_series-left js-prev-series")
            img(class="video-player__move-left-icon" src="../../assets/VideoPlayerAssets/LeftButton.webp" alt="")
        div(class="switch_series switch_series-right js-next-series")
            img(class="video-player__move-right-icon" src="../../assets/VideoPlayerAssets/RightButton.webp" alt="")

block variables
-
    const headerIcons = [];

    if (isAuthorized) {
        headerIcons.push(
                {className: 'js-profile-page', href: '', title: 'Профиль', alt: ''},
                {className: 'js-logout-page', href: '', title: 'Выйти', alt: ''}
        );
    }

    const headerLinks = [
        {className: 'homePage js-home-link', title: 'Главная'},
        {className: 'filmPage js-films-link', title: 'Фильмы'},
        {className: 'serialsPage js-serials-link', title: 'Сериалы'},
        {className: 'lastPage js-latest-link', title: 'Последнее'}
    ]

header
    a(class= 'homePage js-home-link' href= "" ).header-logo
        img(src= "../../assets/RediotekaLogo.png" alt= "")

    ul.header-form
        each i in headerLinks
            li
                a(class= i.className href="")= i.title

    if isAuthorized
        div.header-form__profile
            a(class= 'header-form__profile__link item__right-link js-search-button')
                img(src= '../../assets/search.png')
            div.dropdown-profile
                img(class="dropdown-profile__image" src='../../assets/profileDropdown.png')
                div(class="dropdown-profile__content")
                    each i in headerIcons
                        a(class='item__dropdown-profile ' +  i.className)= i.title
    else
        div.header-form__profile
            a(class= 'header-form__profile__link js-search-button')
                img(src= '../../assets/search.png')
            a(class= 'header-form__profile__link js-login-page')
                img(src= '../../assets/unlogined.png')


div.item__film-card
    div.item__image
        img(id= i.className src= i.src alt= i.alt)
    div.item__details
        div.item__film-card__title
            a(class= i.className href= "#")= i.title

        div.item__film-card__stars= i.stars


        div.item__film-card__description= i.description

        div.item__film-card__buttons
            div.item__button-title Смотреть
            div.item__button-img
                img(src='../../assets/info.png' alt='')

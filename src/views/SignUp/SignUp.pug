include ../../components/Form/Form.pug

-
    const inputs = [
            {
                id: 'login',
                placeholder: 'Логин',
                type: 'text',
            },
            {
                id: 'email',
                placeholder: 'Email',
                type: 'email',
            },
            {
                id: 'password',
                placeholder: 'Пароль',
                type: 'password',
            },
            {
                id: 'confirmPassword',
                placeholder: 'Подтвердите пароль',
                type: 'password',
            }
            ]

    const buttonName = 'Зарегистрироваться'


div.login-signup
    div.login-signup__content
        div.content__title Регистрация
        div.content__title-hint Зарегистрируйтесь для просмотра фильмов и сериалов
        div.content__form
            div.form__form-content
                +form(inputs, buttonName)
                div.form-content__have-acc Уже зарегистрированы?
                    a(class="have-acc__link" href="login.html") Войдите в аккаунт!
